@model IEnumerable<CeLaFaremoMVC.Models.Laptop>

@using CeLaFaremoMVC.Enums 

@{
    ViewData["Title"] = "Laptop Index";
}

@*questo model count qui sotto ci serve per dire che se abbiamo piu di 0 elementi da mostrare
    li faremo vedere
    altrimenti diremo che non abbiamo nulla in questa pagina, in modo specifico non abbiamo
    cose nella tabella di questo db*@
@if (Model.Count() > 0)
{
    <h1 style="text-align:center">LAPTOP LIST</h1>
    <br />
    <br />
    <div class="container">
        @*div => e' un divider*@
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                @*thead si usa per raggruppare il contenuto della head di una table*@
                <tr>
                    @*tr => e' un table row, quindi la riga di una tabella*@
                    <td id="headTextColor">
                        @*td => si usa per definire un data cell in a table*@
                        Id
                    </td>
                    <td id="headTextColor">
                        Brand
                    </td>
                    <td id="headTextColor">
                        Modello
                    </td>
                    <td id="headTextColor">
                        Ram Memory
                    </td>
                    <td id="headTextColor">
                        SSD Memory
                    </td>
                    <td id="headTextColor">
                        Category ID
                    </td>
                    <td id="headTextColor">
                        Modify or Delete
                    </td>
                </tr>
            </thead>
            <tbody>
                @*tbody si usa per inserire il contenuto del body in ua tabella*@
                @foreach (var laptops in Model)
                {
                <tr style="text-align:center">
                    <td>
                        @laptops.Id
                    </td>
                    <td>
                        @laptops.Brand
                    </td>
                    <td>
                        @laptops.Modello
                    </td>
                    <td>
                        @laptops.RamMemory Gb
                    </td>
                    <td>
                        @laptops.SsdMemory Mb
                    </td>
                    <td>
                        @laptops.ElectronicId
                    </td>
                    <td width="20%">
                        <div class="w-100 btn-group" role="group">
                            @*dato che si tratta di una lista, se devo prendere una proprieta' non posso usare il Model (che serve appunto a prendere le proprieta')
                ma devo ciclare la lista e prendermi la proprieta'*@
                            <a class="btn btn-success mx-1" asp-controller="Laptop" asp-action="Update" asp-route-Id="@laptops.Id">Modify</a>
                            <a class="btn btn-danger mx-1" asp-controller="Laptop" asp-action="Delete" asp-route-Id="@laptops.Id">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <br />
    <div style="text-align:center">
        <h1>
            <i class="fas fa-chess-queen" style="color:greenyellow"></i>
            <a id="aHover" href="https://i.scdn.co/image/af2b8e57f6d7b5d43a616bd1e27ba552cd8bfd42">WARNING</a>
            <i class="fas fa-chess-queen" style="color:red"></i>
        </h1>
        <p>
            <h2>The Queen has stolen your List of Object</h2>
        </p>
        <h2>so...</h2>
        <p>
            <h3 style="color:yellow">there is no argument in this section!</h3>
        </p>
        <p>
            <h2>but...</h2>
        </p>
        <p>
            <h4 style="color:greenyellow">You can create a new Laptop,</h4>
        </p>
        <p>
            <h4 style="color:white">
                <i class="fas fa-hand-point-down" style="color:greenyellow"></i>
                click on the button below
                <i class="fas fa-hand-point-down" style="color:red"></i>
            </h4>
        </p>
    </div>
    <br />
}
<div style="text-align:center">
    <a id="btnCreate" asp-controller="Laptop" asp-action="Create" class="btn btn-success">Create a New Laptop</a>
</div>