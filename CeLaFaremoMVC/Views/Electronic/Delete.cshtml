@model CeLaFaremoMVC.Models.Electronic

@{
    ViewData["Title"] = "Delete Electronic";
}
<h2 style="color:yellow ;text-align:center">ARE YOU SURE???</h2>
<br />
<form method="post" asp-controller="Electronic" asp-action="DeletePost" asp-route-Id="@Model.Id">

    @*l'anchor serve proprio per trasferici poi su un'altra pagina
        <a>: The Anchor element. The <a> HTML element (or anchor element), with its href attribute,
        creates a hyperlink to web pages, files, email addresses, locations in the same page,
        or anything else a URL can address. Content within each <a> should indicate the link's destination.*@
    <table class="table table-bordered table-striped" style="width:auto; margin-left: auto;margin-right: auto; width:30%">
        <thead style="text-align:center">
            <tr>
                <td text-align:center">
                    <label asp-for="Id" style="color:red;">Id</label>
                    @*asp-for serve per dire che voglio fare questo post in modo specifico per questa proprieta'*@
                    <input asp-for="Id" placeholder="Insert the Id..." style="float:right" disabled />
                </td>
            </tr>
        </thead>
        <tr>
            <td style="text-align:center">
                <label asp-for="Category" style="color:red">Category</label>
                @*asp-for serve per dire che voglio fare questo post in modo specifico per questa proprieta'*@
                @*Il tag HTML <span> è utilizzato per raggruppare e applicare stili ad elementi inline.*@
                <input asp-for="Category" placeholder="Category..." style="float:right" disabled/>
            </td>
        </tr>
    </table>
    <div style="text-align:center">
        <input type="submit" value="Delete" class="btn btn-danger" width="65" />
        <a asp-controller="Electronic" asp-action="Index" class="btn btn-success" style="margin-left:5px">Go Back</a>
    </div>
</form>